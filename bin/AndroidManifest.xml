<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homestaymanagerandroidapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mapworld"
        android:label="Home Stay Manager"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.example.homestaymanagerandroidapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.homestaymanagerandroidapp.EmailLogin"
            android:label="@string/title_activity_email_login" >
        </activity>
        <activity
            android:name="com.example.homestaymanagerandroidapp.StudentMainMenu"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name="com.example.homestaymanagerandroidapp.ViewFam"
            android:label="@string/title_activity_view_fam" >
        </activity>
        <activity
            android:name="com.example.homestaymanagerandroidapp.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.homestaymanagerandroidapp.FamilyMainMenu"
            android:label="@string/title_activity_family_main_menu" >
        </activity>
    </application>

</manifest>